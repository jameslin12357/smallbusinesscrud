<% include ../partials/header %>

<div class="container ptb-125">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <h3 class="login-heading mb-4 text-center">Create customerstaff</h3>
            <form action="/customersstaffs" method="post">
                <% if (errors.length > 0) { %>
                    <% for(var i = 0; i < errors.length; i++) { %>
                        <div class="alert alert-danger mb-15" role="alert">
                            <%= errors[i].msg %>
                        </div>
                    <% } %>
                <% } %>
                <div class="form-label-group">
                    <input type="text" id="inputUsername" class="form-control" placeholder="Customer Id" name="customer_id" <% if (inputs.length > 0) { %>value="<%=inputs[0].customer_id%>"<% } %>required autofocus>
                    <label for="inputUsername">Customer Id</label>
                </div>
                <div class="form-label-group">
                    <input type="text" id="inputUsername" class="form-control" placeholder="Staff Id" name="staff_id" <% if (inputs.length > 0) { %>value="<%=inputs[0].staff_id%>"<% } %>>
                    <label for="inputUsername">Staff Id</label>
                </div>



                <button class="btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2" type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>