<% include ../partials/header %>

<% if (alert.length > 0) { %>
<div class="alert alert-success success-alert" role="alert">
    <span class="mr-15"><%= alert %></span>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<% } %>

<div class="container ptb-125">
<div class="card item bd-none mb-30">
    <div class="card-body">
        <div class="flex jc-center mb-15"><img src="<%= results[0].imageurl %>" alt="" class="width-100 height-100 border-radius" /></div>
        <h5 class="card-title mb-15 text-center"><%= results[0].email %></h5>
        <h5 class="card-title mb-15 text-center"><%= results[0].username %></h5>
        <p class="card-text mb-15 text-center">Joined <%= moment(results[0].datecreated).format('LLL') %></p>
        <p class="card-text mb-15 text-center"><%= results[0].description %></p>
        <% if (req.user.id === results[0].id) { %>
        <div class="flex jc-center">
            <a class="btn btn-primary mr-15" href="/users/<%= results[0].id %>/edit">Edit</a>
            <form action="/users/<%= results[0].id %>?_method=DELETE" method="post">
                <button type="submit" class="btn btn-primary">Delete</button>
            </form>
        </div>
        <% } %>
    </div>
</div>


</div>


<% include ../partials/footer %>